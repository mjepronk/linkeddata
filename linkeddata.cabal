test-suite linkeddata-test
  type: exitcode-stdio-1.0
  main-is: Spec.hs
  other-modules:
      Data.LinkedData.PropertyTests
  hs-source-dirs:
      test
  ghc-options: -threaded -rtsopts -with-rtsopts=-N
  build-depends:
      base >=4.7 && <5
    , hspec
    , linkeddata
    , modern-uri
    , path
    , QuickCheck
    , text
  default-language: Haskell2010

