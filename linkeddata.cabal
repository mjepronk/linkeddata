name:           linkeddata
version:        0.0.1.0
synopsis:       Linked Data for Haskell
description:    Please see the README on Github at <https://github.com/mjepronk/linkeddata#readme>
homepage:       https://github.com/mjepronk/linkeddata#readme
bug-reports:    https://github.com/mjepronk/linkeddata/issues
author:         Matthias Pronk
maintainer:     matthiasNOSPAM@remakingthe.world
copyright:      (c) Matthias Pronk
license:        BSD3
license-file:   LICENSE
build-type:     Simple
cabal-version:  >= 1.10

extra-source-files:
    ChangeLog.md
    README.md

source-repository head
  type: git
  location: https://github.com/mjepronk/linkeddata

library
  hs-source-dirs:
      src
  build-depends:
      base >=4.7 && <5
    , binary
    , bytestring
    , containers
    , exceptions
    , hashable
    , megaparsec
    , modern-uri
    , mtl
    , parser-combinators
    , path
    , safe
    , text
    , transformers
  exposed-modules:
      Data.LinkedData
      Data.LinkedData.Types
  other-modules:
      Data.LinkedData.Graphs
      Data.LinkedData.IRI
      Data.LinkedData.Query
      Data.LinkedData.Serialisation.NTriplesParser
      Data.LinkedData.Serialisation.NTriplesSerialiser
      Data.LinkedData.Serialisation.TurtleParser
      Data.LinkedData.Serialisation.TurtleSerialiser
      Data.LinkedData.Utils
  default-language: Haskell2010
  ghc-options: -Wall

